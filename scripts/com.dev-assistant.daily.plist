<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
    사용 전 수정 필요:
    1. /path/to/dev-assistant → 실제 프로젝트 경로로 변경
    2. /Users/your-username → 실제 홈 디렉토리로 변경
-->
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.dev-assistant.daily</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/path/to/dev-assistant/scripts/daily-summary.sh</string>
    </array>

    <!-- 매일 18:00 실행 (시간 변경 가능) -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>18</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/path/to/dev-assistant/logs/launchd.log</string>

    <key>StandardErrorPath</key>
    <string>/path/to/dev-assistant/logs/launchd.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
        <key>HOME</key>
        <string>/Users/your-username</string>
    </dict>

    <!-- 실행 놓쳤을 때 바로 실행 -->
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
